<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"

    android:layout_gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_itemCusInfo"
        android:layout_width="match_parent"
        app:cardCornerRadius="70dp"


        app:cardPreventCornerOverlap="true"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:background="@color/bgBottomNavigationAdmin">

            <ImageView
                android:id="@+id/imgCusInfo"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                app:srcCompat="@drawable/boruto50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/bgBottomNavigationAdmin"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1008"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã Khách Hàng:\t"
                    android:textColor="#64DD17"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvIdCusInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="1"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:textStyle="italic|bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên khách hàng:\t "
                    android:textColor="#64DD17"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNameCusInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Mạnh Hiếu"
                    android:textSize="16dp"

                    android:textColor="@color/white"
                    android:textStyle="italic|bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView88"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:\t "
                    android:textStyle="bold"
                    android:textColor="#64DD17" />

                <TextView
                    android:id="@+id/tvEmailCusInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiubin@123"
                    android:textSize="16dp"

                    android:textColor="@color/white"
                    android:textStyle="bold|italic" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView84"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại:\t "
                    android:textStyle="bold"
                    android:textColor="#64DD17" />

                <TextView
                    android:id="@+id/tvPhoneCusInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="093809266"
                    android:textSize="16dp"

                    android:textColor="@color/white"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính:\t "
                    android:textStyle="bold"
                    android:textColor="#64DD17" />

                <TextView
                    android:id="@+id/tvGenderCusInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:textSize="16dp"

                    android:textColor="@color/white"
                    android:textStyle="bold|italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview101"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày Sinh:\t "
                    android:textStyle="bold"
                    android:textColor="#64DD17" />

                <TextView
                    android:id="@+id/tvDateCusInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="16dp"

                    android:text="06/11/2003"
                    android:textColor="@color/white"
                    android:textStyle="bold|italic" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>