<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="100dp"
    android:layout_gravity="center"
    android:background="@color/white"
    tools:context=".Activity.DoiMatKhauActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/hbcinema2" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Đổi Mật Khẩu"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/custom_edt"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edtEmailRSPass"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/email30"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Nhập email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/custom_edt"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edtRSPass"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/lock30"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/custom_edt"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/edtConfirmRSPass"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/lock30"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />


    </LinearLayout>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_button"
        android:onClick="btnLogin_onClick"
        android:textSize="16dp"
        android:text="Đổi mật khẩu"
        android:textColor="@color/white" />
</LinearLayout>