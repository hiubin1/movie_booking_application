<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="1000dp"
        app:cardPreventCornerOverlap="true"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/layout_ListSapChieu"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:onClick="imgbtnPhim_onClick"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgMoviesSCHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                app:srcCompat="@drawable/bgf" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtMovieNameSC"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="BIG GEORGR FORMAN"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtMovieFormatSC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C16"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/custom_c16"
                    android:textAlignment="center"
                    android:textColor="#FF6D00"
                    android:textStyle="bold"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/txtMovieTimeSC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1giờ 57phút"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic"/>

                <TextView
                    android:id="@+id/txtMovieDateSC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic"
                    android:text="05/05/2023" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>